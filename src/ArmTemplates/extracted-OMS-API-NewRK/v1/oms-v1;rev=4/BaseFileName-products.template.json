{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apimServiceName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2021-08-01",
      "type": "Microsoft.ApiManagement/service/products",
      "name": "[concat(parameters('apimServiceName'), '/oms-des-api')]",
      "properties": {
        "description": "OMS-DES API\nSubmarkets:\nUKP\nUKN",
        "subscriptionRequired": true,
        "approvalRequired": false,
        "state": "published",
        "displayName": "OMS-DES API"
      }
    },
    {
      "apiVersion": "2021-08-01",
      "type": "Microsoft.ApiManagement/service/products/groups",
      "name": "[concat(parameters('apimServiceName'), '/oms-des-api/administrators')]",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/products', parameters('apimServiceName'), 'oms-des-api')]"
      ],
      "properties": {
        "description": "Administrators is a built-in group containing the admin email account provided at the time of service creation. Its membership is managed by the system.",
        "displayName": "Administrators",
        "type": "system",
        "builtIn": true
      }
    },
    {
      "apiVersion": "2021-08-01",
      "type": "Microsoft.ApiManagement/service/products/groups",
      "name": "[concat(parameters('apimServiceName'), '/oms-des-api/developers')]",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/products', parameters('apimServiceName'), 'oms-des-api')]"
      ],
      "properties": {
        "description": "Developers is a built-in group. Its membership is managed by the system. Signed-in users fall into this group.",
        "displayName": "Developers",
        "type": "system",
        "builtIn": true
      }
    }
  ]
}